<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:if="http://developer.bingosoft.net/schema/sso/condition"
       xmlns:p="http://www.springframework.org/schema/p"       
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	
    <!-- desktop sign on -->
    <bean id="desktopSignOnServlet" class="bingo.sso.core.servlet.DesktopSignOnServlet"  
          p:clientHostAccesser-ref="clientHostAccesser" 
          p:clientHostManager-ref="clientHostManager"         
          p:singleSignOnController-ref="singleSignOnController"/>
    
    <!-- single sign on -->
    <bean id="singleSignOnServlet" class="bingo.sso.core.servlet.SingleSignOnServlet" 
    	  p:clientHostAccesser-ref="clientHostAccesser"      
    	  p:clientHostManager-ref="clientHostManager"   
          p:singleSignOnController-ref="singleSignOnController"
          p:logoutErrorPage="/error/logout_error.jsp"
          p:logoutWithCloseBrowserPage="/error/logout_with_close_browser.jsp"/>
          
    <!-- server sign on -->
    <bean id="serverSignOnServlet" class="bingo.sso.core.servlet.ServerSignOnServlet" 
    	  p:clientHostAccesser-ref="clientHostAccesser"      
    	  p:clientHostManager-ref="clientHostManager"   
          p:singleSignOnController-ref="singleSignOnController"
          p:logoutErrorPage="/{theme}/error/logout_error.jsp"
          p:logoutWithCloseBrowserPage="/{theme}/error/logout_with_close_browser.jsp"/>
          
    <!-- openid sign on -->
	<bean id="openidSingleSignOnServlet" class="bingo.sso.openid.servlet.SingleSignOnServlet"
	  	  p:clientHostAccesser-ref="clientHostAccesser"   
	  	  p:clientHostManager-ref="clientHostManager"       
          p:service-ref="openIdServerManager"/>
          
    <!-- saml sign on  -->
    <bean id="samlSingleSignOnServlet" class="bingo.sso.saml.servlet.SingleSignOnServlet"
	  	  p:clientHostAccesser-ref="clientHostAccesser"   
	  	  p:clientHostManager-ref="clientHostManager"       
          p:service-ref="samlServerManager"/>
	
	<!-- authorizationCodeAuthServlet -->
	<bean id="authorizationCodeAuthServlet" class="bingo.sso.core.servlet.AuthorizationCodeAuthServlet"  
	      p:singleSignOnController-ref="singleSignOnController"        
          p:centralTicketService-ref="centralTicketService"/>
	
	<!-- appSpecifiedSecretIssueServlet -->
	<bean id="appSpecifiedSecretIssueServlet" class="bingo.sso.core.servlet.AppSpecifiedSecretIssueServlet"  
	      p:singleSignOnController-ref="singleSignOnController"
          p:displayPage="/{theme}/app-specified-secret/app-specified-secret.jsp">
    	<property if:test="runtime.spec_secret_enable=='true'" name="appSpecifiedSecretManager" ref="appSpecifiedSecretManager" />
    </bean>
          
    <!-- openid sign on -->
	<bean id="memberServlet" class="bingo.sso.openid.servlet.MemberServlet"          
          p:service-ref="openIdServerManager"/>
          
    <!-- ================ FILTER DEFINITIONS ================ -->
	<bean id="oncePerRequestServiceFilter"
		class="bingo.sso.openid.filter.OncePerRequestServiceFilter"
		abstract="true">
		<property name="service" ref="openIdServerManager" />
	</bean>
	<bean id="memberFilter"
		class="bingo.sso.openid.filter.MemberFilter"
		parent="oncePerRequestServiceFilter" />
		
	<!-- SecurityContextUtil -->
    <bean id="securityContextUtil" class="bingo.sso.server.web.SecurityContextUtil"          
          p:singleSignOnController-ref="singleSignOnController"
          p:openIdIdentifierParser-ref="openIdIdentifierParser"/>
          
    <!-- 验证码 -->
    <bean id="validateCodeNeedCheckServlet" class="bingo.sso.server.web.validate.ValidateCodeNeedCheckServlet">
    	<property if:test="runtime.random_code_enable=='true'" name="randomCodeValidator" ref="randomCodeValidator" />
    </bean>
</beans>